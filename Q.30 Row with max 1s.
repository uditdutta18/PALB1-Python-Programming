import bisect

class Solution:
    def rowWithMax1s(self, arr):
        n = len(arr)
        m = len(arr[0])
        
        max_ones = 0
        row_index = -1
        
        for i in range(n):
            # Find first occurrence of 1
            idx = bisect.bisect_left(arr[i], 1)
            
            if idx < m:
                ones = m - idx
                if ones > max_ones:
                    max_ones = ones
                    row_index = i
        
        return row_index
