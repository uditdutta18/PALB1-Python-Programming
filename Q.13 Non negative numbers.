class Solution:
    def minJumps(self, arr):
        n = len(arr)
        
        # If array has only one element, no jump needed
        if n <= 1:
            return 0
        
        # If first element is 0, we can't move anywhere
        if arr[0] == 0:
            return -1
        
        # Initialize maximum reachable index, steps in current jump, and jumps count
        maxReach = arr[0]
        step = arr[0]
        jump = 1
        
        # Traverse the array
        for i in range(1, n):
            # If we have reached the end
            if i == n - 1:
                return jump
            
            # Update the maximum reachable index
            maxReach = max(maxReach, i + arr[i])
            
            # Use a step to move forward
            step -= 1
            
            # If no steps remain, we must jump
            if step == 0:
                jump += 1
                
                # If current position is beyond maxReach, we cannot move further
                if i >= maxReach:
                    return -1
                
                # Re-initialize the steps for the new jump
                step = maxReach - i
        
        return -1
